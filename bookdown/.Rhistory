mutate(pp_4 = factor(pp_4,
levels = 1:4,
labels = c("Votante\nCrónico (64.24%)", "Desafecto (8.30%)", "No-Votante\nCrónico (14.28%)", "Activado (13.17%)"))) %>%
mutate(pp_5 = factor(pp_5,
