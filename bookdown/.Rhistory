# Voto en plebiscito de salida para agregar a toda la muestra:
voto_salida <- elsoc_long_2016_2022 %>%
filter(ola == 6) %>%
mutate(voto_salida = case_when(c55 == 4 ~ 5,
c55 %in% 1:3 ~ c55,
c55 %in% -666:-999 ~ 5,
c56 %in% -666:-999 ~ 5,
